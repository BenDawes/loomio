.event-children
  %md-button.event-children__load-previous.thread-item--indent-margin{ng-if: "eventWindow.anyPrevious()", ng-click: "eventWindow.loadPrevious()", translate: "activity_card.n_previous", translate-values: "{count: eventWindow.previousCount()}"}
  %thread-item{ng-repeat: "event in eventWindow.events() | orderBy: threadWindow.orderBy track by event.id", event-window: "eventWindow", event: "event"}
  %md-button.event-children__load-next.thread-item--indent-margin{ng-if: "eventWindow.anyNext()", ng-click: "eventWindow.loadNext()", translate: "activity_card.n_more", translate-values: "{count: eventWindow.nextCount()}"}
  %add_reply_panel
