%section.document-list
  %h3.lmo-card-subheading{translate: "document.list.title", ng-if: "model.documents().length > 0"}
  %md-list.document-list__documents.md-block.lmo-flex{layout: "column"}
    %md-list-item.lmo-flex{ng-repeat: "document in model.documents() track by document.id", layout: "row"}
      %a.document-list__document.lmo-pointer.lmo-relative.lmo-flex.lmo-flex__space-between{layout: "column", href: "{{document.url}}", target: "_blank"}
        .document-list__document-title {{ document.title }}
        .document-list__document-doctype{translate: "document.list.doctype.{{document.doctype}}"}
        %span.document-list__chip{ng-style: "{'border-color': document.color}"}
